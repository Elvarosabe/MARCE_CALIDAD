<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Selection_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="PLANTA:"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/combo_planta"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="CANALETA:"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/combo_canaleta"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="CODIGO\n REFERENCIA:"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/cod_referencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="46dp"
            android:hint="Ingrese Codigo de Referencia"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="TALLA:        "
            android:textColor="@color/black"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/combo_talla"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="COLOR:       "
            android:textColor="@color/black"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/combo_color"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="\n UNIDADES:    "
            android:textColor="@color/black"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/unidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="46dp"
            android:hint="Ingrese Unidades"
            android:textSize="35dp" />

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/reanudar"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:text="REANUDAR"
        android:onClick="Reanudar"
        android:textSize="40dp" />

    <Button
        android:id="@+id/codigo_barras"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="CODIGO BARRAS"
        android:onClick="codigo_barras"
        android:textSize="40dp" />

    <Button
        android:id="@+id/aceptar"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp"
        android:text="ACEPTAR"
        android:onClick="aceptar"
        android:textSize="40dp" />





</LinearLayout>

</LinearLayout>